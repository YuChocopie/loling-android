<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ItemFriendDayHeight"
    android:layout_marginStart="@dimen/ItemFriendDayMargin"
    android:layout_marginEnd="@dimen/ItemFriendDayMargin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivFriendItemLogo"
        android:layout_width="@dimen/ItemFriendDayListLogo"
        android:layout_height="@dimen/ItemFriendDayListLogo"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFriendItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ItemFriendDayMargin"
        android:text="조영은"
        android:textColor="@color/black1"
        android:textSize="@dimen/TEXT_SIZE18"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivFriendItemLogo"
        app:layout_constraintTop_toTopOf="@+id/ivFriendItemLogo" />


    <TextView
        android:id="@+id/tvFriendItemDday"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ItemDdayBoxY"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_round8"
        android:backgroundTint="@color/white2"
        android:lineSpacingExtra="1sp"
        android:paddingStart="@dimen/ItemDdayBoxPadding"
        android:paddingEnd="@dimen/ItemDdayBoxPadding"
        android:text="D-11"
        android:textAlignment="center"
        android:textColor="@color/black1"
        android:textSize="@dimen/TEXT_SIZE12"
        app:layout_constraintBottom_toBottomOf="@+id/ivFriendItemLogo"
        app:layout_constraintStart_toStartOf="@+id/tvFriendItemName"
        app:layout_constraintTop_toBottomOf="@+id/tvFriendItemName" />

    <TextView
        android:id="@+id/tvFriendItemBday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2월 28일"
        android:textColor="@color/black1"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/tvFriendItemDday"
        app:layout_constraintTop_toTopOf="@+id/tvFriendItemDday" />

    <ImageButton
        android:id="@+id/btnFriendItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:src="@drawable/ic_chevron_right"
        android:tint="@color/gray0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/View"
        android:background="@color/white2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
